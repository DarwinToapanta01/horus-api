APP_NAME=Horus
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=es_ES

LOG_CHANNEL=stack
LOG_LEVEL=error

# Base de datos PostgreSQL (Railway provee estas variables)
DB_CONNECTION=pgsql
DB_HOST=
DB_PORT=
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Sesión y Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=

# Queue
QUEUE_CONNECTION=database

# Cache
CACHE_STORE=database

# Broadcasting
BROADCAST_CONNECTION=log

# Mail (Configurar después si es necesario)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@horus.app"
MAIL_FROM_NAME="${APP_NAME}"

# CORS y Sanctum (Actualizar con URL de Vercel)
CORS_ALLOWED_ORIGINS=
SANCTUM_STATEFUL_DOMAINS=

# Filesystem
FILESYSTEM_DISK=local